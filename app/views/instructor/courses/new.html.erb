<div class="container-fluid">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1 box">
			<h2>Enter Your Course Details</h2>
			<br>
			<%= form_for @course, url: instructor_courses_path do |f| %>
			<div class="field">
				<%= f.label :title %>
				<%= f.text_field :title %>
			</div>

			<div class="field">
				<%= f.label :image %>
				<%= f.text_field :image %>
			</div>

			<div class="field">
				<%= f.label :description %>
				<%= f.text_field :description %>
			</div>

			<div class="field">
				<%= f.label :cost %>
				<%= f.number_field :cost, input_html: {min: 0.00, step: 0.01, max: 99999.99} %>
			</div>

			<br>
			<%= f.submit "Create", class: "btn btn-success" %>
			<% end %>
		</div>
	</div>
</div>
