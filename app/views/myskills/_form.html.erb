<%= form_for(myskill) do |f| %>
<% if myskill.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(myskill.errors.count, "error") %> prohibited this myskill from being saved:</h2>

  <ul>
    <% myskill.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group row">
  <%= f.label :skill_id, class: 'col-sm-2 form-control-label'%>
  <%= f.collection_select(:skill_id, Skill.all, :id, :name, {}, {:class=>'col-sm-1'}) %>
</div>

<div class="form-group row">
  <%= f.label :score, class: 'col-sm-2 form-control-label' %>
  <div class="col-sm-6" id='star-rating'></div>
</div>

<div class="actions">
  <%= f.submit %>
</div>
<% end %>
<script>
$('#star-rating').raty({
  path: '/assets',
  scoreName: 'myskill[score]'
});
</script>
