<div class="col-sm-6 col-lg-4">
  <div class="card">
    <div class="card-topper" style='background-image: url(http://www.awesomelycute.com/gallery/2015/05/cute-baby-penguin-8.jpg);'></div>
    <div class="card-block">
      <h4 class="card-title"><%= link_to post.title, post %></h4>
      <p class="published-date">Danas</p>
      <p class="card-text"><%= truncate(post.description, length: 130) %></p>
      <%= link_to 'Read', post, class: 'btn btn-read' %>
    </div>
  </div>
</div>
