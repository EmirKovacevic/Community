<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :position %>
  <%= f.text_field :position, class: 'form-control' %>
</div>

<div class="actions">
  <%= f.submit t('.update', default: 'Update') , class: 'btn btn-primary' %>
</div>
<% end %>
