<div class="container">
  <div class="row">
    <span id="" class="">
      <div class="col-lg-12 col-sm-12 team-box">
        <div class="team-member" tabindex="0">
          <figure class="profile-pic">
            <% if @profile.avatar_url %>
            <img src="<%= @profile.avatar_url %>" alt="Avatar" style="width: 300px; max-width: 100%;">
            <% end %>
          </figure>
          <div class="member-details">
            <h3 class="dark-text red-border-bottom"><%= @profile.name %></h3>
            <% if user_signed_in? %>
              <h4 class="dark-text red-border-bottom">E-mail: <%= @profile.email %></h2>
            <% end %>
            <div class="position">Position: <%= @profile.position %></div>
            <h3>User has skills</h3>
            <% @profile.myskills.each do |myskill| %>
            <div class="score">
              <h5><%= myskill.skill.name %></h5>
              <div class="star-rating" data-score="<%= myskill.score %>"></div>
            </div>
            <% end %>
          </div>
          <div class="social-icons">
            <ul>
            </ul>
          </div>
        </div>
      </div>
    </span>
  </div>
</div>
<script>
$('.star-rating').raty({
  path: '/assets/',
  readOnly: true,
  score: function() {
    return $(this).attr('data-score');
  }
});
</script>
